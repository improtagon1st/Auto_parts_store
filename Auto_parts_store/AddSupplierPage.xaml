<Page x:Class="Auto_parts_store.AddSupplierPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AddSupplierPage"
      Background="#F5F5F5">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="Добавление / Редактирование поставщика"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#3F51B5"
                       Margin="0,0,0,20"
                       TextAlignment="Center"/>

            <TextBlock Text="Название:"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Контактное лицо:"/>
            <TextBox x:Name="ContactNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Телефон:"/>
            <TextBox x:Name="PhoneTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Адрес:"/>
            <TextBox x:Name="AddressTextBox" Margin="0,0,0,10"/>

            <Button Content="Сохранить"
                    Width="150"
                    Margin="0,20"
                    Click="SaveButton_Click"
                    Style="{StaticResource CustomButtonStyle}"/>
            
            
        </StackPanel>
    </ScrollViewer>
</Page>
