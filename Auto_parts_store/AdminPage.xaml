<Page x:Class="Auto_parts_store.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="AdminPage"
      Background="#F5F5F5">

    <Grid Margin="30">
        <StackPanel HorizontalAlignment="Center" Width="800">

            <TextBlock Text="Панель администратора"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#3F51B5"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- Кнопка добавления -->
            <Button Content="Добавить сотрудника"
                    Style="{StaticResource CustomButtonStyle}"
                    Click="AddUserButton_Click"
                    Width="200"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Left"/>

            <!-- Вкладки для разных разделов -->
            <TabControl>
                <!-- Вкладка для Автозапчастей -->
                <TabItem Header="Автозапчасти">
                    <DataGrid x:Name="AutoPartsDataGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              Height="300"
                              Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding PartID}" Width="Auto"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding PartName}" Width="*"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="*"/>
                            <DataGridTextColumn Header="Категория" Binding="{Binding CategoryID}" Width="*"/>
                            <DataGridTextColumn Header="Количество" Binding="{Binding StockQuantity}" Width="*"/>
                            <DataGridTextColumn Header="Модель авто" Binding="{Binding CarModelID}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

                <!-- Вкладка для Поставщиков -->
                <TabItem Header="Поставщики">
                    <DataGrid x:Name="SuppliersDataGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              Height="300"
                              Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding SupplierID}" Width="Auto"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding SupplierName}" Width="*"/>
                            <DataGridTextColumn Header="Контакт" Binding="{Binding ContactName}" Width="*"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="*"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            <DataGridTextColumn Header="Адрес" Binding="{Binding Address}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

                <!-- Вкладка для Заказов -->
                <TabItem Header="Заказы">
                    <DataGrid x:Name="OrdersDataGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              Height="300"
                              Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding OrderID}" Width="Auto"/>
                            <DataGridTextColumn Header="Дата заказа" Binding="{Binding OrderDate}" Width="*"/>
                            <DataGridTextColumn Header="Поставщик" Binding="{Binding SupplierID}" Width="*"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*"/>
                            <DataGridTextColumn Header="Общая сумма" Binding="{Binding TotalAmount}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

                <!-- Вкладка для Запасов -->
                <TabItem Header="Запасы">
                    <DataGrid x:Name="InventoryDataGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              Height="300"
                              Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding InventoryID}" Width="Auto"/>
                            <DataGridTextColumn Header="Запчасть" Binding="{Binding PartID}" Width="*"/>
                            <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="*"/>
                            <DataGridTextColumn Header="Дата обновления" Binding="{Binding LastUpdated}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

                <!-- Вкладка для Пользователей -->
                <TabItem Header="Пользователи">
                    <DataGrid x:Name="UsersDataGrid"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              Height="300"
                              Margin="10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding UserID}" Width="Auto"/>
                            <DataGridTextColumn Header="Логин" Binding="{Binding Username}" Width="*"/>
                            <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*"/>
                            <DataGridTextColumn Header="Роль" Binding="{Binding Roles.RoleName}" Width="*"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>

            <!-- Кнопка Назад -->
            <Button Content="← Выйти"
                    Style="{StaticResource CustomButtonStyle}"
                    Width="120"
                    HorizontalAlignment="Left"
                    Margin="0,20,0,0"
                    Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
