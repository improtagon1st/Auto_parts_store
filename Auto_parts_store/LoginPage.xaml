<Page x:Class="Auto_parts_store.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Auto_parts_store"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Margin="30">
        <StackPanel VerticalAlignment="Center">
            <TextBox x:Name="usernameTextBox" Tag="Логин" Margin="0,5"
                     Foreground="Gray" Text="Логин"
                     GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>

            <PasswordBox x:Name="passwordBox" Tag="Пароль" Margin="0,5"
                         Foreground="Gray" PasswordChanged="PasswordBox_PasswordChanged"
                         GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus"/>

            <Button Content="Войти" Margin="0,20,0,0" Click="LoginButton_Click"/>
            <TextBlock Text="Нет аккаунта? Зарегистрируйтесь"
                       Foreground="Blue" Cursor="Hand"
                       MouseDown="RegisterLabel_Click"/>
        </StackPanel>
    </Grid>
</Page>
