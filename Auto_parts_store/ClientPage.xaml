<Page x:Class="Auto_parts_store.ClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Auto_parts_store"
      Title="ClientPage"
      Background="#F5F5F5">

    <Page.Resources>
        <local:ImagePathConverter x:Key="ImagePathConverter"/>
    </Page.Resources>

    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Каталог автозапчастей"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#3F51B5"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- Панель фильтров -->
            <WrapPanel Margin="0,0,0,20">
                <StackPanel Margin="10">
                    <TextBlock Text="Категория:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="CategoryComboBox" Width="180" SelectionChanged="Filter_Changed"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <TextBlock Text="Модель авто:" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="ModelComboBox" Width="180" SelectionChanged="Filter_Changed"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <TextBlock Text="Поиск по названию:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="SearchTextBox" Width="200" TextChanged="Filter_Changed"/>
                </StackPanel>
            </WrapPanel>

            <!-- Список товаров -->
            <ListView x:Name="PartsListView" Margin="0,0,0,20">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD" BorderThickness="1" Margin="5" Padding="10" CornerRadius="10">
                            <StackPanel Orientation="Horizontal">
                                <Image Width="120" Height="120"
                                       Source="{Binding ImagePath, Converter={StaticResource ImagePathConverter}}"
                                       Stretch="UniformToFill"
                                       Margin="0,0,10,0"/>

                                <StackPanel>
                                    <TextBlock Text="{Binding PartName}" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Categories.CategoryName}" FontSize="14"/>
                                    <TextBlock Text="{Binding CarModels.Model}" FontSize="14"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray"/>
                                    <TextBlock Text="{Binding Price, StringFormat='Цена: {0:C}'}" FontSize="14" Foreground="#E53935"/>
                                    <Button Content="🛒 В корзину"
                                            Style="{StaticResource CustomButtonStyle}"
                                            Width="120"
                                            Margin="0,10,0,0"
                                            Tag="{Binding}"
                                            Click="AddToCart_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Content="Выйти"
                    Style="{StaticResource CustomButtonStyle}"
                    Width="120"
                    Click="BackButton_Click"/>
        </StackPanel>
    </ScrollViewer>
</Page>
