<Page x:Class="Auto_parts_store.CashierPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Auto_parts_store"
      Title="CashierPage">

    <Grid Background="#F5F5F5" Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.2*"/>
        </Grid.ColumnDefinitions>

        <!-- Список запчастей -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Ассортимент автозапчастей"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#3F51B5"
                       Margin="10"/>

            <DataGrid x:Name="PartsDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Margin="10"
                      SelectionMode="Single"
                      Height="400">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding PartID}" Width="50"/>
                    <DataGridTextColumn Header="Название" Binding="{Binding PartName}" Width="*"/>
                    <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="100"/>
                    <DataGridTextColumn Header="В наличии" Binding="{Binding StockQuantity}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Количество:" VerticalAlignment="Center" Margin="0,0,10,0" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="QuantityTextBox" Width="100"/>
                <Button Content="Добавить в корзину"
                        Style="{StaticResource CustomButtonStyle}"
                        Margin="10,0,0,0"
                        Click="AddToCartButton_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Корзина и оформление -->
        <StackPanel Grid.Column="1" Margin="20,0,0,0">
            <TextBlock Text="Корзина"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#3F51B5"
                       Margin="0,0,0,10"/>

            <DataGrid x:Name="CartDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Height="300"
                      Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название" Binding="{Binding PartName}" Width="*"/>
                    <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="80"/>
                    <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="60"/>
                    <DataGridTextColumn Header="Сумма" Binding="{Binding Total}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Margin="0,10,0,0">
                <TextBlock Text="Итого:" FontSize="16"/>
                <TextBlock x:Name="TotalTextBlock"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#E53935"
                           Margin="0,5"/>
            </StackPanel>

            <Button Content="Оформить продажу"
                    Style="{StaticResource CustomButtonStyle}"
                    Width="200"
                    Margin="0,20,0,0"
                    Click="CompleteSaleButton_Click"/>

            <Button Content="← Назад"
                    Style="{StaticResource CustomButtonStyle}"
                    Width="120"
                    Margin="0,10,0,0"
                    Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
