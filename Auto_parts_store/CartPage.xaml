<Page x:Class="Auto_parts_store.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CartPage"
      Background="#F5F5F5">

    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Ваша корзина"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#3F51B5"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <ListView x:Name="CartListView" Margin="0,0,0,20">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#DDD" BorderThickness="1" Margin="5" Padding="10" CornerRadius="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding PartName}" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding Price, StringFormat='Цена: {0} ₽'}" FontSize="14" Foreground="#E53935"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Content="← Назад"
                    Style="{StaticResource CustomButtonStyle}"
                    Width="120"
                    Click="BackButton_Click"/>
        </StackPanel>
    </ScrollViewer>
</Page>
