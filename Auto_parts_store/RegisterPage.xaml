<Page x:Class="Auto_parts_store.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Auto_parts_store"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid Margin="30">
        <StackPanel VerticalAlignment="Center" Width="300" HorizontalAlignment="Center">

            <TextBlock Text="Логин:"/>
            <TextBox x:Name="usernameTextBox" Margin="0,5"/>

            <TextBlock Text="Пароль:"/>
            <PasswordBox x:Name="passwordBox" Margin="0,5"/>

            <TextBlock Text="Повторите пароль:"/>
            <PasswordBox x:Name="confirmPasswordBox" Margin="0,5"/>

            <TextBlock Text="ФИО:"/>
            <TextBox x:Name="fullNameTextBox" Margin="0,5"/>

            <TextBlock Text="Телефон (пример: +79991234567):"/>
            <TextBox x:Name="phoneTextBox" Margin="0,5" PreviewTextInput="Phone_PreviewTextInput"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="emailTextBox" Margin="0,5"/>

            <Button Content="Зарегистрироваться" Margin="0,20,0,0" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
